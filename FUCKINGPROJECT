#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void menu()
{
	printf("====================\n");
	printf("%%%%%% 신나는야구%%%%%%\n");
	printf("1: 야구공선택\n");
	printf("2: 플레이\n");
	printf("3: 종료\n");
	printf("====================\n");
	printf("메뉴를 선택하세요.\n");
}

int main()
{
	int i, n = 10;
	char way;
	char ball[10];
	srand((unsigned)time(NULL));

	do 
	{
		menu();
		scanf("%d", &way);
		if (way == 1)
		{
			for (i = 0; i < n; i++)
			{
				printf("문자를 한개씩 입력해주세요.(%d개남음):\n",(n-i));
				scanf(" %c", ball[i]);
				if (ball[i] == 0)
				{
					for (i; i < n; i++)
						ball[i] = rand() % ('Z' - 'A' + 1) + 'A';
				}
			}
		}
		else if (way==2)
		{
			
		}
		else if (way == 3)
			break;
		else
		{
			printf("""%c은 없는 메뉴입니다.""",way);
			continue;
		}

	} while (1);

	return 0;
}
